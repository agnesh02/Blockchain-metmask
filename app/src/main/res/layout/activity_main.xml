<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/getATransaction"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:text="get a transaction"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/getTotalTransactionCount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="get total transactions count"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/getATransaction"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/getATransaction"
        app:layout_constraintTop_toBottomOf="@+id/getATransaction"
        app:layout_constraintVertical_bias="0.063" />

    <Button
        android:id="@+id/getWalletBalance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="get wallet balance"
        app:layout_constraintEnd_toEndOf="@+id/getTotalTransactionCount"
        app:layout_constraintHorizontal_bias="0.314"
        app:layout_constraintStart_toStartOf="@+id/getTotalTransactionCount"
        app:layout_constraintTop_toBottomOf="@+id/getTotalTransactionCount" />

    <Button
        android:id="@+id/performATransaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="perform a transaction"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.161" />

    <Button
        android:id="@+id/btdAddData"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="add data to chain"
        app:layout_constraintEnd_toEndOf="@+id/performATransaction"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/performATransaction"
        app:layout_constraintTop_toBottomOf="@+id/performATransaction" />

</androidx.constraintlayout.widget.ConstraintLayout>